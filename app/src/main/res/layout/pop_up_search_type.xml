<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_marginBottom="30dp"
            android:text="search by ?" />

        <RadioGroup
            android:id="@+id/radio_group_choices"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton_name"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="Worker's name" />

            <RadioButton
                android:id="@+id/radioButton_specialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"

                android:text="Worker's specialty" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pop_up_search_by_btn_cancel"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_weight="1"
                android:text="Cancel" />

            <Button
                android:id="@+id/pop_up_search_by_btn_done"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Done" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>