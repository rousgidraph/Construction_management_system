<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="214dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:text="Reduce Units" />

        <TextView
            android:id="@+id/pop_up_reduce_item_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:textSize="33sp"
            android:layout_marginBottom="10dp"

            android:text="Item Name" />

        <EditText
            android:id="@+id/pop_up_reduce_item_units"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:ems="10"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/outlined_input"
            android:inputType="number"
            android:hint="Unit change" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pop_up_reduce_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Cancel" />

            <Button
                android:id="@+id/pop_up_reduce_btn_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Reduce" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>